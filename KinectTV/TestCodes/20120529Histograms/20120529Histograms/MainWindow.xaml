<Window x:Class="_20120529Histograms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="480" Width="1200">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Image x:Name="DepthImage" Width="640" Height="480"></Image>
                <ScrollViewer Margin="0,15" HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="DepthHistogram" Orientation="Horizontal" Height="300"/>
                </ScrollViewer>
            </StackPanel>
            
            
        </StackPanel>
    </Grid>
</Window>
