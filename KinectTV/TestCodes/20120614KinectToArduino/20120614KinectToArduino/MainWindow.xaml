<Window x:Class="_20120614KinectToArduino.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="480"
        Width="640">
    <Viewbox Stretch="Uniform">
        <Grid x:Name="LayoutRoot">
            <Image Name="videoImage"
                   Width="640"
                   Height="480"></Image>
            <Canvas Background="Transparent">
                <Ellipse Fill="Red"
                         Height="20"
                         Width="20"
                         Name="ellipseLeftHand"
                         Stroke="White" />
                <Ellipse Fill="Red"
                         Height="20"
                         Width="20"
                         Name="ellipseRightHand"
                         Stroke="White" />
                <Ellipse Fill="Red"
                         Height="20"
                         Width="20"
                         Name="ellipseHead"
                         Stroke="White" />
                <ComboBox Canvas.Left="291" Canvas.Top="182" Height="23" Name="PortNames" Width="120" />
            </Canvas>
        </Grid>
    </Viewbox>
</Window>
